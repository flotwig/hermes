{
  "name": "hermes",
  "author": {
    "name": "Zach Bloomquist",
    "email": "hermes@bloomqu.ist",
    "url": "https://zach.bloomqu.ist/"
  },
  "homepage": "https://zach.bloomqu.ist/hermes",
  "description": "A simple, searchable multi-platform email client.",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.1.0",
    "bootstrap-css-only": "^4.1.1",
    "emailjs-base64": "^1.1.4",
    "emailjs-mime-parser": "^2.0.5",
    "emailjs-utf7": "^4.0.1",
    "fs-extra": "3.0.1",
    "googleapis": "^32.0.0",
    "mobx": "^5.0.3",
    "mobx-react": "^5.2.3",
    "moment": "^2.22.2",
    "object-assign": "4.1.1",
    "postcss-flexbugs-fixes": "3.2.0",
    "promise": "8.0.1",
    "raf": "3.4.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-responsive-modal": "^3.1.0",
    "react-toastify": "^4.1.0",
    "reactstrap": "^6.3.0",
    "request": "^2.87.0",
    "resolve": "1.6.0",
    "semaphore": "^1.1.0",
    "sqlite3": "^4.0.1",
    "whatwg-fetch": "2.0.3"
  },
  "scripts": {
    "start": "node scripts/start.js",
    "build": "node scripts/build.js",
    "test": "node scripts/test.js --env=jsdom",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "build-electron": "electron-builder",
    "release": "yarn build && yarn build-electron"
  },
  "main": "electron/index.js",
  "devDependencies": {
    "autoprefixer": "7.1.6",
    "babel-core": "6.26.0",
    "babel-eslint": "7.2.3",
    "babel-jest": "20.0.3",
    "babel-loader": "7.1.2",
    "babel-preset-react-app": "^3.1.1",
    "babel-runtime": "6.26.0",
    "case-sensitive-paths-webpack-plugin": "2.1.1",
    "chalk": "1.1.3",
    "css-loader": "0.28.7",
    "dotenv": "4.0.0",
    "dotenv-expand": "4.2.0",
    "electron": "^2.0.4",
    "electron-builder": "^20.22.0",
    "eslint": "4.10.0",
    "eslint-config-react-app": "^2.1.0",
    "eslint-loader": "1.9.0",
    "eslint-plugin-flowtype": "2.39.1",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-react": "7.4.0",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.5",
    "html-webpack-plugin": "2.29.0",
    "jest": "20.0.4",
    "postcss-loader": "2.0.8",
    "react-dev-utils": "^5.0.1",
    "style-loader": "0.19.0",
    "sw-precache-webpack-plugin": "0.11.4",
    "url-loader": "0.6.2",
    "webpack": "3.8.1",
    "webpack-dev-server": "2.9.4",
    "webpack-manifest-plugin": "1.3.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,mjs}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node",
      "mjs"
    ]
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "build": {
    "appId": "ist.bloomqu.zach.hermes",
    "productName": "Hermes",
    "copyright": "Copyright 2018 Zach Bloomquist",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "directories": {
      "buildResources": "electron/resources/"
    },
    "files": [
      "electron",
      "build",
      "src"
    ],
    "linux": {
      "category": "Office",
      "target": [
        "deb",
        "AppImage"
      ]
    }
  }
}
